@model IEnumerable<ScoresPredictorMVC.Models.Fixture>

@{
    ViewBag.Title = "Edit Predictions";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>
            <p>Date</p>
        </th>
        <th>
            <p>Home Team</p>
        </th>
        <th>
            <p>Away Team</p>
        </th>
        <th></th>
    </tr>

    @foreach (var fixture in Model)
    {
        <tr>
            <td>
                @fixture.Date
            </td>
            <td>
                @fixture.Home_Team
            </td>
            <td>
                @fixture.Away_Team
            </td>
            <td>
                <div class="btn btn-danger">@Html.ActionLink("Edit", "Enter", new { id = fixture.fixtureId })</div>
            </td>
        </tr>
    }

</table>
